<div style="max-width: 600px; margin: 50px auto; padding: 20px; font-family: system-ui, -apple-system, sans-serif;">
  <h1 style="color: #2c3e50;">Upload Audio File</h1>
  
  <%= form_with model: @transcription, local: true, multipart: true, style: "background: #f8f9fa; padding: 30px; border-radius: 12px; box-shadow: 0 2px 8px rgba(0,0,0,0.1);" do |form| %>
    <% if @transcription.errors.any? %>
      <div style="color: #dc3545; margin-bottom: 20px;">
        <h3>Errors:</h3>
        <ul>
          <% @transcription.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div style="margin-bottom: 20px;">
      <%= form.label :title, "Title (optional)", style: "display: block; margin-bottom: 5px; color: #34495e; font-weight: 500;" %>
      <%= form.text_field :title, placeholder: "e.g., Lecture Notes - Nov 7", style: "width: 100%; padding: 10px; border: 1px solid #dee2e6; border-radius: 6px; font-size: 16px;" %>
    </div>

    <div style="margin-bottom: 20px;">
      <%= form.label :audio_file, "Audio File", style: "display: block; margin-bottom: 5px; color: #34495e; font-weight: 500;" %>
      <%= form.file_field :audio_file, accept: "audio/*", style: "width: 100%; padding: 10px; border: 1px solid #dee2e6; border-radius: 6px; font-size: 16px;" %>
      <p style="color: #6c757d; font-size: 14px; margin-top: 5px;">Supported formats: MP3, WAV, M4A, etc.</p>
    </div>

    <div>
      <%= form.submit "Upload & Transcribe", style: "background: #007bff; color: white; padding: 12px 24px; border: none; border-radius: 6px; font-size: 16px; cursor: pointer; width: 100%;" %>
    </div>
  <% end %>

  <div style="margin-top: 30px; text-align: center;">
    <%= link_to "â† Back to All Transcriptions", transcriptions_path, style: "color: #007bff; text-decoration: none;" %>
  </div>
</div>
